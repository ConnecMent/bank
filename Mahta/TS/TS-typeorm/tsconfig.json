{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,      
    "outDir": "./dist",                           
    "moduleResolution": "node",
    "typeRoots": ["./node_modules/@types"],
    "types": ["node", "sqlite3"]
  },
  "include": ["dataSource.ts"]
}
